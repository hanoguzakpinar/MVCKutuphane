        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="button" id="insert" value="EKLE" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group" id="loadingBarinsert" style="text-align:center;">
        <img src="~/Img/loading.svg" height="50" />
    </div>
</div>
}

<hr />
<div>
    <a href="/User/Index" class="btn btn-primary">Kullanıcı Listesi</a>
</div>



<script type="text/javascript">
    function load() {
        $(".datepicker").datepicker({
            monthNames: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
            monthNamesShort: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
            dayNamesMin: ["Pa", "Pt", "Sl", "Ça", "Pe", "Cu", "Ct"],
            firstDay: 1,
            changeMonth: true,
            changeYear: true,
            maxDate: new Date(),
            defaultDate: new Date(),
            dateFormat: 'dd-mm-yy',
            yearRange: '1900:2100'
        });
    };
    load();

    var isInsert = false;
    $('#loadingBarinsert').hide();

    $(document).ready(function () {
        $('#insert').click(function () {
            if (!isInsert) {
                isInsert = true;
                $('#loadingBarinsert').show();

                var tc = $('#Tc').val();
                var name = $('#Adi').val();
                var soyadi = $('#Soyadi').val();
                var dogumtarihi = $('#DogumTarihi').val();
                var dogumyeri = $('#DogumYeri').val();
                var telefon = $('#Telefon').val();
                var cinsiyet = $('#Cinsiyet').val();
                var email = $('#Email').val();
                var username = $('#Username').val();
                var pass = $('#Password').val();
                var yetki = $('#Yetki').val();
                var adres = $('#Adres').val();
                var lJson = {
                    Tc: tc, Adi: name, Soyadi: soyadi, DogumTarihi: dogumtarihi, DogumYeri: dogumyeri, Telefon: telefon, Cinsiyet: cinsiyet,
                    Email: email, Username: username, Password: pass, Yetki: yetki, Adres: adres
                };

                $.ajax({
                    type: "POST",
                    url: "/User/Insert",
                    dataType: "json",
                    data: lJson,
                    success: function (data) {
                        if (data.success == 0) {
                            $('#Tc').val("");
                            $('#Adi').val("");
                            $('#Soyadi').val("");
                            $('#DogumTarihi').val("");
                            $('#DogumYeri').val("");
                            $('#Telefon').val("");
                            $('#Cinsiyet').val("0");
                            $('#Email').val("");
                            $('#Username').val("");
                            $('#Password').val("");
                            $('#Yetki').val("0");
                            $('#Adres').val("");
                        }

                        myToastr(data);
                        isInsert = false;
                        $('#loadingBarinsert').hide();
                    }
                });
            }
        });
    });

</script>