            @Html.EditorFor(model => model.Soyadi, new { htmlAttributes = new { @class = "form-control", autocomplete = "off", placeholder = "Soyisim" } })
            @Html.ValidationMessageFor(model => model.Soyadi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
